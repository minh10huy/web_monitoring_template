//                        if (!is_int($key)) {
//                            $resultDataReport[$i][$key] = $value;
//                        }
//                    }
//                    $i++;
//                }
//                
//                // Ch? l?y k?t qu? c?a con tr? d?u tiên
//                break;
//            }
            $stmt->execute();
            $results = $stmt->fetchAll();
            for ($i = 0; $i < count($results); $i++) {
                foreach ($results[$i] as $key => $value) {
                    $resultDataReport[$i][$key] = $value;
                }
            }            
            $con->commit();
